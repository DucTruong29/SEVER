 <nav class="navbar navbar-light navbar-expand-lg fixed-top" id="mainNav">
        <a class="navbar-brand" href="/">Tinder</a>
    </nav>


    <header class="masthead d-flex align-items-center" style="background:url('/img/bg-masthead.jpg')no-repeat center center;background-size:cover; height: 480px">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form method="post" action="/findName" name="form-search-user">
                        <div class="form-row">
                            <div class="col-12 col-md-9 mb-2 mb-md-0"><input name="name" class="form-control form-control-lg" type="text" placeholder="Enter user name..."></div>
                            <div class="col-12 col-md-3"><button id="btnSearchUser" class="btn btn-primary btn-block btn-lg" type="submit">Search</button></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            {{#each data}}
                <div class="col-md-4" style="margin-bottom: 80px">
                    <div class="card-box text-center border border-primary">
                        <div class="user-pic">
                            <img src="/{{this.avatar}}" class="img-fluid" alt="User Pic">
                        </div>
                        <h4>{{this.name}}</h4>
                        <h6>{{this.number_phone}}</h6>
                        <h6>{{this.address}}</h6>
                        <h6>{{this._id}}</h6>
                        <div class="mb-4" >
                            <a href="/edit/{{this.username}}" style="color: white" class="btn btn-primary col-md-4 ">Edit</a>

                            <a href="" style="color: white" class="btn btn-primary col-md-4" data-toggle="modal" data-username="{{this.username}}" data-target="#delete-user-model">Delete</a>
                        </div>
                    </div>


                </div>
            {{/each}}

        </div>
    </div>


    <section class="showcase"></section>
    <script src="/js/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>

    <!-- Modal -->
    <div class="modal fade" id="delete-user-model" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Would you like to delete?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button id="btnDeleteUser" type="button" class="btn btn-primary">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <form action="" name="form-delete-user" method="get"></form>

    <script>
        var username;
        var btnDeleteUSer = document.getElementById('btnDeleteUser');
        var deleteForm = document.forms['form-delete-user'];
        var editForm = document.forms['form-edit-user'];


        $('#delete-user-model').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            username = button.data('username')
        })

        btnDeleteUSer.onclick = () =>{
            deleteForm.action = 'delete/' + username+'?_method=DELETE';
            deleteForm.submit();
        }

    </script>